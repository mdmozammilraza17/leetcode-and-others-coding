import java.util.Arrays;

class Solution
{
    public int[] plusOne (int digits[])
    {
        for (int i=digits.length-1; i>=0; i--)
        {
            if (digits[i] < 9)
            {
                digits[i] ++;
                return digits;
            }
            else
            {
                digits[i] = 0;
            }
        }
        int digitLength = digits.length;
        int newLen[] = new int[digitLength+1];
        newLen[0] = 1;
        return newLen;
    }
}

class Main
{
    public static void main(String[] args)
    {
        int digits [] = {9};
        Solution solution = new Solution();
        int []updatedDigits = solution.plusOne(digits);
        System.out.println(Arrays.toString(updatedDigits));
    }
}